<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-books-table" author="kash-save-backend">
        <createTable tableName="books">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="currency" type="VARCHAR(3)" defaultValue="INR">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Create foreign key constraint -->
        <addForeignKeyConstraint
            baseTableName="books"
            baseColumnNames="user_id"
            constraintName="fk_books_user_id"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <!-- Create indexes for performance -->
        <createIndex tableName="books" indexName="idx_books_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="books" indexName="idx_books_name">
            <column name="name"/>
        </createIndex>

        <createIndex tableName="books" indexName="idx_books_created_at">
            <column name="created_at"/>
        </createIndex>

        <createIndex tableName="books" indexName="idx_books_currency">
            <column name="currency"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>